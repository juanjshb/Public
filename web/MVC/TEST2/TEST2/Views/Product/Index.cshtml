@model IEnumerable<TEST2.Models.Product>
@{
    ViewData["Title"] = "Manage Products";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Add New Product</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Quantity</th>
            <th>Department</th>
            <th>Production Status</th>
            <th>Created Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Category</td>
                    <td>@product.Quantity</td>
                    <td>@product.Department?.DepartmentName</td>
                    <td>@product.ProductionStatus</td>
                    <td>@product.CreatedDate.ToShortDateString()</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = product.ProductID })" class="btn btn-secondary">Edit</a>
                        <a href="@Url.Action("Delete", new { id = product.ProductID })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
