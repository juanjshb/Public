@model IEnumerable<ProductManager.Models.Product>

@{
    ViewData["Title"] = "Product Page";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary"> Add Product </a>
</p>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Quantity</th>
            <th>Department</th>
            <th>Production Status</th>
            <th>Create Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var product in Model)
            {
                <tr>
                    <th>@product.Name</th>
                    <th>@product.Category</th>
                    <th>@product.Quantity</th>
                    <th>@product.Department.DepartmentName</th>
                    <th>@product.ProductionStatus</th>
                    <th>@product.CreatedDate</th>
                    <th>
                        <a href="@Url.Action("Details", "Product", new { id = product.ProductID })" class="btn btn-info">Details</a>
                        <a href="@Url.Action("Edit", "Product", new { id = product.ProductID })" class="btn btn-warning">Edit</a>
                        <a href="@Url.Action("Delete", "Product", new { id = product.ProductID })" class="btn btn-danger"
                           onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                    </th>
                </tr>
            }

        }
    </tbody>
</table>
