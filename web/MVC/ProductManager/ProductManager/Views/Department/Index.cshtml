@model IEnumerable<ProductManager.Models.Department>

@{
    ViewData["Title"] = "Department Page";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary"> Add Department </a>
</p>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var department in Model)
            {
                <tr>
                    <th>@department.DepartmentName</th>
                    <th>
                        <a href="@Url.Action("Edit", new {id = department.DepartmentID})" class="btn btn-secundary"> Edit</a>
                        <a href="@Url.Action("Delete", new {id = department.DepartmentID})" class="btn btn-danger"
                           onclick="return confirm('Are your sure you want to delete this product')"> Delete</a>
                    </th>
                </tr>
            }

        }
    </tbody>
</table>
